<!DOCTYPE html>
<html>
  <title>PEI - <%= strings.administrationStrings.aside.menu[currentLocation] %></title>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" type="text/css" href="/stylesheets/administration/base.css" />
  <link rel="stylesheet" type="text/css" href="/stylesheets/administration/units.css" />
  <link rel="stylesheet" type="text/css" href="/stylesheets/fontawesome.css" />
  <link rel="stylesheet" type="text/css" href="/stylesheets/common.css" />
  <link rel="stylesheet" type="text/css" href="/stylesheets/popup.css" />
  <body>
    <% include ../../include/informations.ejs %>
    <div class="mainBlock">
      <% include ../include/header.ejs %>
      <div class="content">
        <div class="contentName"><%= strings.administrationStrings.unitsHome.title %></div>
        <% include ../include/unitsNavBar.ejs %>
        <div class="unitsContainer">
          <div class="unitsTable">
            <div class="unitsTableHeader">
              <div class="unitsTableHeaderColumn large"><%= strings.administrationStrings.unitsHome.listHeader.name %></div>
              <div class="unitsTableHeaderColumn large"><%= strings.administrationStrings.unitsHome.listHeader.parent %></div>
              <div class="unitsTableHeaderColumn small"></div>
              <div class="unitsTableHeaderColumn small"></div>
            </div>
            <% for(var x = 0; x < units.length; x++){ %>
              <div class="unitsTableElement <% if(x % 2 === 1){ %>odd<% } %>">
                <div class="unitsTableElementColumn large name"><%= units[x].unitName %></div>
                <% if(units[x].unitParent == null){ %>
                  <div class="unitsTableElementColumn large static"><%= strings.administrationStrings.unitsHome.rootUnit %></div>
                <% } else{ %>
                  <div class="unitsTableElementColumn large">
                    <select name="<%= units[x].unitParent.parentId %>" onchange="updateUnitParent()">
                      <% for(var y = 0; y < units.length; y++){ %>
                        <% if(units[x].unitId !== units[y].unitId){ %>
                          <% if(units[x].unitChildren.includes(units[y].unitId) == false){ %>
                            <% if(units[x].unitParent.parentId === units[y].unitId){ %>
                              <option value="<%= units[y].unitId %>" selected><%= units[y].unitName %></option>
                            <% } else{ %>
                              <option value="<%= units[y].unitId %>"><%= units[y].unitName %></option>
                            <% } %>
                          <% } %>
                        <% } %>
                      <% } %>
                    </select>
                  </div>
                <% } %>
                <div class="unitsTableElementColumn small rename">
                  <div onclick="renameUnit('<%= units[x].unitName %>', <%= units[x].unitId %>)" class="unitsTableElementColumnRename"><%= strings.administrationStrings.unitsHome.renameButton %></div>
                </div>
                <div class="unitsTableElementColumn small remove">
                  <div class="unitsTableElementColumnRemove"><%= strings.administrationStrings.unitsHome.removeButton %></div>
                </div>
              </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>
    <% include ../../include/scripts.ejs %>
    <script src="/js/administration/exit.js"></script>
    <script src="/js/administration/units/renameUnit.js"></script>
    <script src="/js/administration/units/removeUnit.js"></script>
    <script src="/js/administration/units/updateUnitParent.js"></script>
  </body>
</html>
