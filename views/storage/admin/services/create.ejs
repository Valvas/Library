<!DOCTYPE html>
<html>
  <title><%= strings.storage.name %> - <%= strings.storage.locations.admin %></title>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" type="text/css" href="/stylesheets/base.css" />
  <link rel="stylesheet" type="text/css" href="/stylesheets/common.css" />
  <link rel="stylesheet" type="text/css" href="/stylesheets/fontawesome.css" />
  <link rel="stylesheet" type="text/css" href="/stylesheets/storage/base.css" />
  <link rel="stylesheet" type="text/css" href="/stylesheets/storage/admin/navigation.css" />
  <link rel="stylesheet" type="text/css" href="/stylesheets/storage/admin/services/form.css" />
  <body>
    <% include ../../../include/informations.ejs %>
    <% include ../../includes/aside.ejs %>
    <div class='storageMainBlock'>
      <% include ../../includes/admin/navigation.ejs %>
      <div class="serviceCreationForm">
        <div class="serviceCreationFormTitle"><%= strings.storage.admin.services.form.title %></div>
        <form id="serviceCreationFormBlock">
          <div class="serviceCreationFormBlockIncorrectFormat" id="serviceCreationFormBlockNameIncorrect"><%= strings.storage.admin.services.form.format.incorrect %></div>
          <input class="serviceCreationFormBlockNameInput" id="serviceCreationFormBlockName" type="text" placeholder="<%= strings.storage.admin.services.form.inputs.name.placeholder %>" required />
          <div class="serviceCreationFormBlockHelp"><%= strings.storage.admin.services.form.inputs.name.help %></div>
          <div class="serviceCreationFormBlockLabel"><%= strings.storage.admin.services.form.inputs.size.value %></div>
          <input class="serviceCreationFormBlockSizeInput" id="serviceCreationFormBlockSizeValue" type="number" placeholder="<%= strings.storage.admin.services.form.inputs.size.placeholder %>" min="1" max="9999" required /><!--
          --><select class="serviceCreationFormBlockSizeSelect" id="serviceCreationFormBlockSizeQuantifier">
            <% for(var option in strings.storage.admin.services.form.inputs.size.options){ %>
              <option value="<%= option %>"><%= strings.storage.admin.services.form.inputs.size.options[option] %></option>
            <% } %>
          </select>
          <div class="serviceCreationFormBlockHelp"><%= strings.storage.admin.services.form.inputs.size.help %></div>
          <div class="serviceCreationFormExtensionsBlock">
            <div class="serviceCreationFormExtensionsTitle"><%= strings.storage.admin.services.form.extensions.title %></div>
            <div class="serviceCreationFormExtensionsMessage"><%= strings.storage.admin.services.form.extensions.message %></div>
            <div class="serviceCreationFormBlockIncorrectFormat" id="serviceCreationFormBlockExtensionsError"><%= strings.storage.admin.services.form.extensions.required %></div>
            <div class="serviceCreationFormExtensionsBlockList">
              <% for(var x = 0; x < locals.extensions.length; x++){ %>
                <div class="serviceCreationFormExtensionsBlockElement">
                  <input name="extensionCheckbox" type="checkbox" class="serviceCreationFormExtensionsBlockElementCheckbox" value="<%= locals.extensions[x].uuid %>" /><div class="serviceCreationFormExtensionsBlockElementLabel"><%= locals.extensions[x].value %></div>
                </div>
              <% } %>
            </div>
          </div>
          <div class="serviceCreationFormButtonsBlock">
            <button class="serviceCreationFormSubmit"><%= strings.storage.admin.services.form.send %></button>
            <a href="/storage/admin/services" class="serviceCreationFormBack"><%= strings.common.global.cancel %></a>
          </div>
        </form>
      </div>
    </div>
    <% include ../../../include/common_scripts.ejs %>
    <script src='/js/storage/admin/services/links.js'></script>
    <script src='/js/storage/admin/services/create.js'></script>
    <script src='/js/storage/exit.js'></script>
  </body>
</html>