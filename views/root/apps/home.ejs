<!DOCTYPE html>
<html>
  <title>PEI - <%= strings.common.locations[currentLocation] %></title>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" type="text/css" href="/stylesheets/base.css" />
  <link rel="stylesheet" type="text/css" href="/stylesheets/common.css" />
  <link rel="stylesheet" type="text/css" href="/stylesheets/root/apps/base.css" />
  <link rel="stylesheet" type="text/css" href="/stylesheets/fontawesome.css" />
  <body>
    <% include ../../include/informations.ejs %>
    <div class="mainSection">
      <div class="subSection">
        <% include ../include/header.ejs %>
        <div class="contentSection">
          <div class="asideColumn">
            <% include ../include/aside.ejs %>
            <% include ../include/news.ejs %>
          </div>
          <div class="centerColumn">
            <div class="appSection" id="appBlocks">
              <div class="appSectionTitle">Applications</div>
              <div class="appSectionContainer">
                <% for(var x = 0; x < locals.apps.length; x++){ %>
                  <% if(locals.apps[x].hasAccess){ %>
                    <a class="appBlock" href="/<%= locals.apps[x].name %>">
                      <div class="appBlockPictureContainer">
                        <img class="appBlockPicture" src="data:image/png;base64,<%= locals.apps[x].picture %>"/>
                      </div>
                      <div class="appBlockName"><%= locals.strings.common.apps[locals.apps[x].name] %></div>
                      <div class="appBlockAccess"><%= strings.common.root.apps.accessApp %></div>
                      <div class="appBlockDescription">
                        <div class="appBlockDescriptionTitle"><%= locals.strings.common.apps[locals.apps[x].name] %></div>
                        <div class="appBlockDescriptionContent"><%= locals.strings.common.root.apps.descriptions[locals.apps[x].name] %></div>
                      </div>
                    </a>
                  <% } else{ %>
                    <div class="appBlockNoAccess">
                      <div class="appBlockNoAccessPictureContainer">
                        <img class="appBlockNoAccessPicture" src="data:image/png;base64,<%= locals.apps[x].picture %>"/>
                      </div>
                      <div class="appBlockNoAccessName"><%= locals.strings.common.apps[locals.apps[x].name] %></div>
                      <div class="appBlockNoAccessMessage"><%= strings.common.root.apps.noAccess %></div>
                      <div class="appBlockNoAccessDescription">
                        <div class="appBlockNoAccessDescriptionTitle"><%= locals.strings.common.apps[locals.apps[x].name] %></div>
                        <div class="appBlockNoAccessDescriptionContent"><%= locals.strings.common.root.apps.descriptions[locals.apps[x].name] %></div>
                      </div>
                    </div>
                  <% } %>
                <% } %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% include ../include/footer.ejs %>
    </div>
    <% include ../../include/common_scripts.ejs %>
    <% include ../include/scripts.ejs %>
    <script src='/js/root/news/selectNewsExternal.js'></script>
  </body>
</html>