<!DOCTYPE html>
<html>
  <title>PEI - <%= strings.common.locations[currentLocation] %></title>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" type="text/css" href="/stylesheets/base.css" />
  <link rel="stylesheet" type="text/css" href="/stylesheets/home.css" />
  <link rel="stylesheet" type="text/css" href="/stylesheets/fontawesome.css" />
  <body>
    <% include ../../include/header.ejs %>
    <% include ../../include/informations.ejs %>
    <div class="mainBlock">
      <div class="startColumn">
        <% include ../../include/aside.ejs %>
        <% include ../../include/news.ejs %>
      </div><!--
      --><div class="centerColumn">
        <div class="mainNewsBlock">
          <% if(news.length > 0){ %>
            <div class="mainNewsBlockArticle" name="<%= news[index].uuid %>" id="mainNewsBlockArticle">
              <div class="mainNewsBlockArticleDate"><%= news[index].timestamp %></div>
              <div class="mainNewsBlockArticleTitle"><%= news[index].title %></div>
              <div class="mainNewsBlockArticleContent"><%- news[index].content %></div>
              <div class="mainNewsBlockArticleAuthor"><%= news[index].author %></div>
            </div>
          <% } else{ %>
            <div class="mainNewsBlockEmpty">
              <div class="mainNewsBlockEmptyIcon"><i class="far fa-paper-plane"></i></div>
              <div class="mainNewsBlockEmptyMessage">Aucun article pour le moment</div>
            </div>
          <% } %>
        </div>
      </div><!--
      --><div class="endColumn">
        <div class="newsManagementBlock">
          <div class="newsManagementBlockTitle">Gestion des articles</div>
          <div class="newsManagementBlockContent">
            <a href="/news/create" class="newsManagementBlockContentElement">
              <div class="newsManagementBlockContentElementIcon"><i class="fas fa-plus-circle"></i></div><div class="newsManagementBlockContentElementText">Cr√©er un article</div>
            </a>
            <% if(news.length > 0){ %>
              <div class="newsManagementBlockContentElement">
                <div class="newsManagementBlockContentElementIcon"><i class="fas fa-pencil-alt"></i></div><div class="newsManagementBlockContentElementText">Modifier cet article</div>
              </div>
              <div class="newsManagementBlockContentElement">
                <div class="newsManagementBlockContentElementIcon"><i class="far fa-trash-alt"></i></div><div class="newsManagementBlockContentElementText">Supprimer cet article</div>
              </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>
    <% include ../../include/footer.ejs %>
    <% include ../../include/root_scripts.ejs %>
    <script src='/js/root/news/selectNewsInternal.js'></script>
  </body>
</html>