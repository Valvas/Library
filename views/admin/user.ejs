<!DOCTYPE html>
<html>
  <% include ../include/head.ejs %>
  <link rel='stylesheet' type='text/css' href='/stylesheets/admin/user/edit.css' />
  <body class='private-section-body'>
    <% include ../include/menu.ejs %>
    <% include ../include/admin_aside.ejs %>
    <div class='admin-main-block' name='<%= account['uuid'] %>'>
      <a class='return' href='/admin/users'>Retour</a>
      <div id='email' name='text' class='block'>
        <div class='key'>Adresse email</div><!-- @SuppressWhitespace
        --><div class='value'><%= account['email'] %></div><!-- @SuppressWhitespace
        --><button name='admin-users-edit-account-button' class='edit'>Modifier</button>
      </div>
      <div id='lastname' name='text' class='block'>
        <div class='key'>Nom</div><!-- @SuppressWhitespace
        --><div class='value'><%= account['lastname'] %></div><!-- @SuppressWhitespace
        --><button name='admin-users-edit-account-button' class='edit'>Modifier</button>
      </div>
      <div id='firstname' name='text' class='block'>
        <div class='key'>Pr√©nom</div><!-- @SuppressWhitespace
        --><div class='value'><%= account['firstname'] %></div><!-- @SuppressWhitespace
        --><button name='admin-users-edit-account-button' class='edit'>Modifier</button>
      </div>
      <div id='service' name='select' class='block'>
        <div class='key'>Service</div><!-- @SuppressWhitespace
        --><div class='value'><%= services[account['service']]['name'] %></div><!-- @SuppressWhitespace
        --><button name='admin-users-edit-account-button' class='edit'>Modifier</button>
      </div>
      <div id='is_admin' name='select' class='block'>
        <div class='key'>Administrateur</div><!-- @SuppressWhitespace
        --><div class='value'><% if(account['is_admin'] == 1){ %>Oui<% } else{ %>Non<% } %></div><!-- @SuppressWhitespace
        --><button name='admin-users-edit-account-button' class='edit'>Modifier</button>
      </div>
      <div id='suspended' name='select' class='block'>
        <div class='key'>Suspendu</div><!-- @SuppressWhitespace
        --><div class='value'><% if(account['suspended'] == 1){ %>Oui<% } else{ %>Non<% } %></div><!-- @SuppressWhitespace
        --><button name='admin-users-edit-account-button' class='edit'>Modifier</button>
      </div>
    </div>
    <% include ../include/scripts.ejs %>
    <script src='/js/afk.js'></script>
    <script src='/js/admin/user.js'></script>
  </body>
</html>